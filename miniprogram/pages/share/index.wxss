/* miniprogram/pages/share/index.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.info {
  padding: 10px 15px;
  font-size: 12px;
  color: #666666;
}
.info .tip {
  font-size: 12px;
  color: #999999;
}
.address {
  margin-top: 10px;
}
.footer {
  display: flex;
  flex-direction: row;
}
.footer .last {
  margin-left: 10px;
}
.footer label {
  font-size: 11px;
  color: #999999;
  line-height: 30px;
}
.footer .first {
  margin-left: auto;
}
.button {
  margin: 30px 50rpx 20px;
  width: 650rpx;
  background-color: #f65d72 !important;
}
.header-ing .panel-index--van-panel__header-value {
  color: #4b0;
}
.header-wait .panel-index--van-panel__header-value {
  color: #7c2e76;
}
.header-done .panel-index--van-panel__header-value {
  color: #f44;
}