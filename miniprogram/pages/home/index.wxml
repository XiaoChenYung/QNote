<!--index.wxml-->
<block wx:key="{{index}}" wx:for="{{notes}}">
  <van-panel title="{{item.title}}" desc="{{item.detail}}" status="进行中" use-footer-slot footer-class="fotter">
    <view class='info'>
      <view wx:if="{{item.address.length > 0}}">位置：{{item.address}}</view>
      <view wx:if="{{item.weather.length > 0}}">天气：{{item.weather}}</view>
      <view wx:if="{{item.showAlertTime.length > 0}}">提醒时间：{{item.showAlertTime}}</view>
      <view>分享：暂无好友分享</view>
    </view>
    <view class='footer' slot="footer">
      <van-button custom-class="button" size="small" type="primary">分享</van-button>
      <van-button custom-class="button" size="small" type="danger">关闭</van-button>
    </view>
  </van-panel>
</block>
<van-toast id="van-toast" />